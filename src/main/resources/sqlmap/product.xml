<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE sqlMap PUBLIC "-//iBATIS.com//DTD SQL Map 2.0//EN" "http://www.ibatis.com/dtd/sql-map-2.dtd">

<sqlMap namespace="Product">

	<resultMap id="ProductResult" class="com.richardhoppes.example.model.Product">
		<result property="id" column="product_id"/>
		<result property="name" column="product_name"/>
	</resultMap>

	<select id="getProductById" parameterClass="java.lang.Integer" resultMap="Product.ProductResult">
		/*Product.getProductById*/
		SELECT
			p.product_id,
			p.product_name
		FROM product p
		WHERE p.product_id = #value#
	</select>

	<select id="getAllProducts" resultMap="Product.ProductResult">
		/*Product.getAllProducts*/
		SELECT
			p.product_id,
			p.product_name
		FROM product p
	</select>

	<insert id="createProduct" parameterClass="com.richardhoppes.example.model.Product">
		INSERT INTO product (product_name) VALUES (#name#)
		<selectKey resultClass="java.lang.Integer" type="post" keyProperty="id">
			SELECT LAST_INSERT_ID() AS value
		</selectKey>
	</insert>

	<insert id="updateProduct" parameterClass="com.richardhoppes.example.model.Product">
		UPDATE product set product_name = #name# WHERE product_id = #id#
	</insert>

	<delete id="deleteProduct" parameterClass="java.lang.Integer">
		DELETE FROM product WHERE product_id = #value#
	</delete>

</sqlMap>